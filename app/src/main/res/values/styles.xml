<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <!-- tanzim toggle sefid -->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>




    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green_dark</item>
    </style>

    <style name="RadioButtonColor" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">#39a122</item>

    </style>
    <style name="textViewStyle_XL_Land">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <style name="noAligntextViewStyleDark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>
    <style name="textViewStyleDark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>
    <style name="textViewStyleUnfocusedDark">
        <item name="android:textColor">#d2212121</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>
    <style name="toolbar_style">
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textViewStyleLight">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:tint">#fff</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#ef5350</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>


</resources>
